<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="activity"
            type="com.example.calculator.MainActivity" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black"
        tools:context=".MainActivity">



        <EditText
            android:id="@+id/btn1"
            android:layout_width="360dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="#000000"
            android:gravity="right|center"
            android:maxLength="8"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="45sp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/btn1"
            android:layout_alignLeft="@id/btn1"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_effect"
            android:gravity="center"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/btn1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/btn2"
            android:background="@drawable/button_effect"
            android:gravity="center"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/btn1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/btn3"
            android:background="@drawable/button_effect"
            android:gravity="center"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/btn1"
            android:layout_alignRight="@id/btn1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle1"
            android:gravity="center"
            android:text="x"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/btn2"
            android:layout_alignLeft="@id/btn2"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_effect"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/btn3"
            android:layout_alignLeft="@id/btn3"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_effect"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/btn4"
            android:layout_marginTop="20dp"
            android:layout_alignLeft="@id/btn4"
            android:background="@drawable/button_effect"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/btn5"
            android:layout_alignLeft="@id/btn5"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle1"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn10"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/btn6"
            android:layout_marginTop="20dp"
            android:layout_alignLeft="@id/btn6"
            android:background="@drawable/button_effect"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn11"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/btn7"
            android:layout_marginTop="20dp"
            android:layout_alignLeft="@id/btn7"
            android:background="@drawable/button_effect"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn12"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/btn8"
            android:layout_marginTop="20dp"
            android:layout_alignLeft="@id/btn8"
            android:background="@drawable/button_effect"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn13"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/btn9"
            android:layout_marginTop="20dp"
            android:layout_alignLeft="@id/btn9"
            android:background="@drawable/circle1"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn14"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/btn10"
            android:layout_marginTop="20dp"
            android:layout_alignLeft="@id/btn10"
            android:background="@drawable/button_effect"
            android:gravity="center"
            android:text="AC"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn15"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/btn11"
            android:layout_marginTop="20dp"
            android:layout_alignLeft="@id/btn11"
            android:background="@drawable/button_effect"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn16"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/btn12"
            android:layout_marginTop="20dp"
            android:layout_alignLeft="@id/btn12"
            android:background="@drawable/button_effect"
            android:gravity="center"
            android:text="."
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn17"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/btn13"
            android:layout_marginTop="20dp"
            android:layout_alignLeft="@id/btn13"
            android:background="@drawable/circle1"
            android:gravity="center"
            android:text="="
            android:textColor="@color/white"
            android:textSize="30sp" />



    </RelativeLayout>
</layout>